<h1>应用包列表<small>选择下面的业务包并安装！</small></h1>

<div class="row">
  <% @packages.each do |package| %>
    <div class="col-md-3">
      <div class="panel panel-success">
       <div class="panel-heading">
         <%= package.title %>
       </div>
       <div class="panel-body">
         <i class="fa fa-x5 fa-<%= package.icon %>"></i>
         <%= package.description %>
       </div>
       <div class="panel-footer">
        <%= link_to '安装', new_site_package_path(site_id: current_site.id, package_id: package.id) %>
       </div>
      </div>
     </div>
  <% end %>
</div>
