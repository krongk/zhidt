<%= simple_form_for(@site_package_flow) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, input_html: {rows: 22} %>
    <%= f.input :status, collection:  ApplicationHelper::FLOW_STATUS %>
  </div>

  <br/>
  <div class="form-actions">
    <%= f.button :submit, '更 新', class: 'btn btn-lg btn-primary' %> &nbsp;&nbsp;
    <div class="pull-right">
      <%= link_to '查 看 ', site_package_flow_path(@site_package_flow), class: 'btn btn-lg btn-info' %>
    </div>
  </div>
<% end %>
