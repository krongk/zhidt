  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title><%= content_for?(:title) ? yield(:title) : "Zhidt" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Zhidt" %>">

    <script src="/js/modernizr-2.6.2-respond-1.1.0.min.js" data-turbolinks-track="true"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

     <!-- SCRIPTS IN HEAD ============================================== -->
     <!-- NOTE:: jquery 2.x does not support IE 8 so version 1.9.1 is used for older versions of IE
            :: calling jQuery in the head for ajax work if necessary.
            -->
     <!--[if gt IE 8]><!-->
        <script src="/js/jquery.min.2.0.3.js" data-turbolinks-track="true"></script>
        <!--<![endif]-->
     <!--[if lt IE 9]>
        <script src="/js/1.9.1-jquery.min.js" data-turbolinks-track="true"></script>
        <![endif]-->
     
     <!-- WINDOWS 8 Phones BUG FIX -->
     <script src="/js/windows-fix.js" data-turbolinks-track="true"></script>


     <!--[if lt IE 9]>
      <script type="text/javascript" src="/js/selectivizr.js" data-turbolinks-track="true"></script>
    <![endif]-->
     
    <!-- ========= GENERATE CODE AND TOUCH ICONS http://iconifier.net/ =========== -->
  </head>
  <body>
    <!-- accessibility skip to nav skip content -->
    <ul class="sr-only" id="top">
     <li><a href="#nav" title="Skip to navigation" accesskey="n">Skip to Navigation</a></li>
     <li><a href="#page" title="Skip to content" accesskey="c">Skip to Content</a></li>
    </ul>
    <!--  /.sr-only accessibility-->

    <!-- ____________ Navigation Column _______________  -->
    <%= render 'layouts/navigation' %>
    <!-- /.nav-col -->
    <!-- ____________ Logo Column (search and social follow) _______________  -->
    <%= render 'layouts/logo_col' %>
    <!-- /.logo-col --> 

    <%= render 'layouts/messages' %>

    <!-- ____________ CONTENT COLUMN _______________  -->

    <div class="content-col blog-page" id="page">
     <!-- notice class ".blog-page" -->
     
    <div class="inner-content" >
    <!-- DO NOT USE .container or .container-fluid with this framework -->
        <%= yield %>
    </div>
    <!--/inner-content -->
     
    </div>
    <!--/content-col --> 

    <% if true  %>
        <%= render 'layouts/footer' %>
    <% end %>

    <!-- _________ FOOTER SCRIPTS ________ --> 

    <script src="/js/bootstrap.min.js"></script> 
    <script src="/js/jquery.sidewaze_base.js"></script> 

    <!-- Way Better Bootstrap Modals INSTRUCTIONS: https://github.com/jschr/bootstrap-modal/ --> 
    <!-- DEMO:: http://jschr.github.io/bootstrap-modal/bs3.html --> 
    <script src="/js/bootstrap-modalmanager.js"></script> 
    <script src="/js/bootstrap-modal.js"></script> 

    <!-- Responsive Carousel LEARN IT HERE: http://www.owlgraphic.com/owlcarousel/demos/custom.html--> 

  </body>
</html>
